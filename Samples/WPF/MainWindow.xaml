<Window x:Class="Microsoft.ProjectOxford.Text.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sampleUtil="clr-namespace:SampleUserControlLibrary;assembly=SampleUserControlLibrary"
        Icon="Assets\Microsoft-logo_rgb_c-gray.png"
        Title="Microsoft Cognitive Services Text Samples" MinHeight="768" Height="768" MinWidth="600" Width="1024" WindowStyle="ThreeDBorderWindow" WindowState="Normal" FontFamily="Segoe UI Regular" FontSize="14" Margin="0">
    <Grid>
        <sampleUtil:SampleScenarios x:Name="_scenariosControl" SampleTitle="Microsoft Cognitive Services Text Samples" Disclaimer="" />
        <Button x:Name="clearHistoryButton" Content="Clear Power BI History" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="177" Height="30" Click="clearHistoryButton_Click"/>
        <CheckBox x:Name="sendToPBICheckbox" Content="Send Data to Power BI" HorizontalAlignment="Right" Width="177" Margin="0,91,10,0" VerticalAlignment="Top" IsChecked="True"/>
        <CheckBox x:Name="loopTestCheckbox" Content="Loop Test" HorizontalAlignment="Right" Width="177" Margin="0,55,10,0" VerticalAlignment="Top" />
        <Button x:Name="testButton" Content="Test" HorizontalAlignment="Right" Margin="0,50,10,0" VerticalAlignment="Top" Width="80" Height="31" Click="testButton_Click"/>
    </Grid>
</Window>
